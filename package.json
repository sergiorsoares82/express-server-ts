{
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && NODE_ENV=development tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "migrations:create": "node-pg-migrate create -m src/infra/migrations",
    "migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "test": "npm run services:up && concurrently -n tsx,jest --hide tsx -k -s command-jest \"NODE_ENV=development tsx --watch src/index.ts\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "wait-for-postgres": "node src/infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@types/jest": "29.5.14",
    "async-retry": "1.3.3",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "express": "5.1.0",
    "node-pg-migrate": "7.9.1",
    "pg": "8.15.6"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.26.0",
    "@types/async-retry": "1.4.9",
    "@types/express": "5.0.1",
    "@types/pg": "8.15.1",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.26.0",
    "globals": "16.1.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
