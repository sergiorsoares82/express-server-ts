{
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && NODE_ENV=development tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "migrations:create": "node-pg-migrate create -m src/infra/migrations",
    "migrations:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "wait-for-postgres": "node src/infra/scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "express": "^5.1.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/pg": "^8.11.14",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
